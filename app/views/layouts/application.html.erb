<!DOCTYPE html>
<html>
<head>
  <title>Projection</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="session">
    <% if logged_in? %>
      Hello, <%= link_to "#{current_user.username}", user_url(current_user) %>
      <%= button_to "Sign Out", session_url, method: :delete, class: 'btn' %>
    <% else %>
      <%= link_to "Sign Up", new_user_url %>
      <%= link_to "Sign In", new_session_url %>
    <% end %>
  </div>

  <%= flash[:errors] %>

  <%= yield %>

</body>
</html>
